generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum KeywordPriority {
  LOW
  MEDIUM
  HIGH
}

model Word {
  word   String  @unique
  isNoun Boolean @default(false)
}

model WebPage {
  url         String    @unique
  title       String?
  description String?
  language    String?
  keywords    Keyword[]
}

model Keyword {
  id         Int             @id @default(autoincrement())
  webPage    WebPage         @relation(fields: [webPageUrl], references: [url])
  webPageUrl String
  priority   KeywordPriority
  keyword    String
  occurances Int
}
